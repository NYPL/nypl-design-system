{
  "name": "@nypl/design-system-react-components",
  "version": "0.26.0",
  "description": "NYPL Reservoir Design System React Components",
  "repository": {
    "type": "git",
    "url": "https://github.com/NYPL/nypl-design-system/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/design-system-react-components.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">10"
  },
  "author": "NYPL",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && npm run generate-sass-resources",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test - --watch",
    "test:generate-output": "tsdx test --json --outputFile=.jest-test-results.json  || true",
    "lint": "tsdx lint",
    "prepare": "npm run build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate-sass-resources": "gulp",
    "storybook": "start-storybook -p 6006 -s ./.storybook/public",
    "build-storybook:v0": "npm run prebuild:storybook && build-storybook -c .storybook -o ./reservoir/v0",
    "prebuild:storybook": "npm run test:generate-output"
  },
  "lint-staged": {
    "*.{jsx,ts,tsx}": "eslint src --ext=jsx,ts,tsx --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/design-system-react-components.cjs.production.min.js",
      "limit": "300 KB"
    },
    {
      "path": "dist/design-system-react-components.esm.js",
      "limit": "300 KB"
    }
  ],
  "dependencies": {
    "@chakra-ui/react": ">=1.7.1",
    "@chakra-ui/system": ">=1.8.1",
    "@emotion/react": "11.4.1",
    "@emotion/styled": "11.3.0",
    "framer-motion": "4.1.17",
    "he": "1.2.0",
    "react-datepicker": "4.1.1",
    "system-font-css": "2.0.2",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "@chakra-ui/react": ">=1.7.1",
    "@chakra-ui/system": ">=1.8.1",
    "@emotion/react": ">=11.4.1",
    "@emotion/styled": ">=11.3.0",
    "framer-motion": ">=4.1.17",
    "react": ">=16.13.0",
    "react-dom": ">=16.13.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@mdx-js/react": "1.6.22",
    "@size-limit/preset-small-lib": "5.0.1",
    "@storybook/addon-a11y": "6.4.19",
    "@storybook/addon-actions": "6.4.19",
    "@storybook/addon-docs": "6.4.19",
    "@storybook/addon-essentials": "6.4.19",
    "@storybook/addon-jest": "6.4.19",
    "@storybook/addon-links": "6.4.19",
    "@storybook/addon-queryparams": "6.2.9",
    "@storybook/addons": "6.4.19",
    "@storybook/react": "6.4.19",
    "@svgr/rollup": "5.5.0",
    "@svgr/webpack": "5.5.0",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "26.0.20",
    "@types/jest-axe": "3.5.3",
    "@types/jsdom": "12.2.4",
    "@types/node": "12.7.12",
    "@types/react": "16.14.21",
    "@types/testing-library__jest-dom": "5.14.1",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "autoprefixer": "9.8.8",
    "babel-loader": "8.2.2",
    "breakpoint-sass": "2.7.1",
    "css-loader": "5.2.7",
    "cssnano": "5.0.7",
    "eslint": "7.31.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.8.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-storybook": "^0.5.6",
    "gulp": "4.0.2",
    "gulp-concat": "^2.6.1",
    "husky": "^7.0.4",
    "import-glob-loader": "1.1.0",
    "jest": "27.3.1",
    "jest-axe": "5.0.1",
    "jsdom": "15.2.1",
    "lint-staged": "10.5.4",
