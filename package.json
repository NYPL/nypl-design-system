    "rollup-plugin-postcss": "4.0.0",
    "rollup-plugin-svg": "2.0.0",
    "sass": "1.35.1",
    "sass-loader": "10.0.0",
    "semantic-release-slack-bot": "2.1.0",
    "size-limit": "5.0.1",
    "storybook-addon-designs": "6.2.1",
    "style-loader": "2.0.0",
    "ts-jest": "27.0.4",
    "tsdx": "0.14.1",
    "tslib": "2.3.0"
  }
}
